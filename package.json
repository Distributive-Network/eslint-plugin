{
  "name": "@distributive/eslint-plugin",
  "version": "1.0.0",
  "description": "Plugin containing Distributive style guide rules",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "license": "MIT",
  "author": "Joash Mathew",
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
